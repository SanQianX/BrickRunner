.page {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  /* 顶部固定区域 */
  .top-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
    background-color: #fff;
  }
  
  /* 轮播图 */
  .banner {
    height: 200rpx;
  }
  .banner-image {
    width: 100%;
    height: 200rpx;
  }
  
  /* 分类 Tabs 横向滚动 */
  .novel-tabs {
    display: flex;
    white-space: nowrap;
    border-bottom: 1rpx solid #eee;
  }
  .tab-item {
    padding: 0rpx 10rpx;
    font-size: 28rpx;
    color: #666;
  }
  .tab-item.active {
    color: #ff6600;
    border-bottom: 4rpx solid #ff6600;
  }
  
  /* 章节列表 */
  .chapter-list {
    flex: 1;
    margin-top: 260rpx; /* 轮播 + Tabs 高度 */
    margin-bottom: 160rpx; /* 搜索框 + TabBar 高度 */
    overflow-y: auto;
    background: #fafafa;
  }
  .chapter-item {
    padding: 20rpx;
    border-bottom: 1px solid #eee;
    background-color: #fff;
  }
  
  /* 固定底部搜索框（显示在 TabBar 上方） */
  .search-box {
    position: fixed;
    bottom: 100rpx; /* 留出 TabBar 高度 */
    left: 0;
    width: 100%;
    display: flex;
    gap: 10rpx;
    padding: 20rpx;
    background-color: #f8f8f8;
    border-top: 1px solid #ddd;
    box-sizing: border-box;
  }
  .search-box input {
    flex: 1;
    border: 1px solid #ccc;
    padding: 10rpx;
    border-radius: 8rpx;
    background-color: #fff;
  }
  .search-box button {
    background-color: #1aad19;
    color: #fff;
    padding: 0 20rpx;
    border-radius: 8rpx;
  }
  
  /* 自定义 TabBar */
  .custom-tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
    border-top: 1px solid #ddd;
    z-index: 20;
  }
  .custom-tab-bar .tab-item {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #999;
  }
  .custom-tab-bar .tab-item.active {
    color: #1aad19;
  }
  