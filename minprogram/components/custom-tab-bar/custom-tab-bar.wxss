.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
    border-top: 1px solid #ddd;
    z-index: 20;
  }
  .tab-item {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #999;
  }
  .tab-item.active {
    color: #1aad19;
  }
  